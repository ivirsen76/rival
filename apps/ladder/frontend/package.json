{
    "name": "@rival/ladder.frontend",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "analyze": "source-map-explorer 'build/static/js/*.js'",
        "start:client": "vite --host",
        "start:server": "cd ../backend && pnpm run dev",
        "start": "npm-run-all --parallel --race --print-label start:client start:server",
        "start:prod": "cd src/server && npm run start",
        "start:test": "NODE_ENV=test npm run start",
        "playwright": "playwright test",
        "db:restore": "src/scripts/restoreDb.js",
        "migrate": "cd src/server && npm run migrate",
        "migrate:undo": "cd src/server && node_modules/.bin/sequelize-cli db:migrate:undo",
        "migrate:undo:all": "cd src/server && node_modules/.bin/sequelize-cli db:migrate:undo:all",
        "seed": "cd src/server && node_modules/.bin/sequelize-cli db:seed:all",
        "build": "NODE_ENV=production vite build",
        "lint": "tsc --noEmit --project tsconfig.app.json",
        "check": "vitest run",
        "check:staged": "src/scripts/lint-staged.js && src/scripts/test-staged.js",
        "test": "vitest run"
    },
    "browserslist": {
        "production": [
            ">0.5% in US",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@amcharts/amcharts4": "^4.10.18",
        "@reduxjs/toolkit": "^1.5.1",
        "@rival/ladder.backend": "workspace:*",
        "@rival/common": "workspace:*",
        "@sentry/react": "^6.16.1",
        "@sentry/tracing": "^6.16.1",
        "@statsig/js-client": "^3.8.2",
        "@types/react-redux": "^7.1.34",
        "@types/react-router-dom": "^5.3.3",
        "@vitejs/plugin-react-swc": "^4.2.2",
        "autoprefixer": "^10.4.16",
        "bootstrap": "5.3.2",
        "classnames": "^2.3.1",
        "clipboard-copy": "^4.0.1",
        "corner-smoothing": "^0.1.5",
        "flatpickr": "^4.6.13",
        "history": "^4.10.1",
        "js-cookie": "^3.0.1",
        "lodash": "^4.17.21",
        "marked": "^16.4.1",
        "primereact": "^10.8.3",
        "prop-types": "^15.7.2",
        "react": "18.2.0",
        "react-beautiful-dnd": "^13.1.0",
        "react-css-transition-replace": "^4.0.4",
        "react-dom": "18.2.0",
        "react-dropzone": "^14.2.9",
        "react-helmet": "^6.1.0",
        "react-hotkeys-hook": "^4.4.1",
        "react-imask": "^6.0.7",
        "react-lazyload": "^3.2.0",
        "react-photo-album": "^3.0.2",
        "react-query": "^3.15.2",
        "react-redux": "^7.2.3",
        "react-router-dom": "^5.2.0",
        "react-router-hash-link": "^2.4.3",
        "react-simple-pull-to-refresh": "^1.3.3",
        "react-virtuoso": "^4.14.0",
        "sass": "1.97.2",
        "use-debounce": "^7.0.1"
    },
    "devDependencies": {
        "@playwright/test": "1.57.0",
        "@types/lodash": "^4.17.23",
        "@types/node": "^22.13.2",
        "@types/react": "^19.2.8",
        "@types/react-dom": "^19.2.3",
        "cross-spawn": "^7.0.3",
        "dotenv": "^8.2.0",
        "happy-dom": "^12.10.3",
        "npm-run-all": "^4.1.5",
        "source-map-explorer": "^2.5.2",
        "vite": "^7.3.1",
        "vite-imagetools": "^9.0.2",
        "vite-plugin-svgr": "^4.5.0"
    }
}
